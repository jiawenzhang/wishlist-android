<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ParseLogin" parent="android:Theme.Holo.NoActionBar"/>

    <!-- Generated with http://android-holo-colors.com -->
    <style name="Wishlist_Yellow" parent="@style/_Wishlist_Yellow"/>

    <style name="_Wishlist_Yellow" parent="android:Theme.Holo.Light.DarkActionBar">
        <!--<item name="android:actionBarItemBackground">@drawable/wishlist_yellow_item_background_holo_light</item>-->

        <item name="android:actionBarItemBackground">@drawable/selectable_background_wishlist</item>

        <!-- Light.DarkActionBar specific -->
        <item name="android:actionBarWidgetTheme">@style/Theme.Wishlist.Widget</item>

        <item name="android:editTextBackground">@drawable/wishlist_yellow_edit_text_holo_light</item>

        <item name="android:textColorHighlight">#99f6be27</item>
        <item name="android:textSelectHandleLeft">@drawable/wishlist_yellow_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/wishlist_yellow_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/wishlist_yellow_text_select_handle_middle</item>

        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewWishlist_Yellow</item>

        <item name="android:listChoiceIndicatorMultiple">@drawable/wishlist_yellow_btn_check_holo_light</item>

        <item name="android:listChoiceIndicatorSingle">@drawable/wishlist_yellow_btn_radio_holo_light</item>

        <item name="android:buttonStyle">@style/ButtonWishlist_Yellow</item>

        <item name="android:imageButtonStyle">@style/ImageButtonWishlist_Yellow</item>

        <item name="android:dropDownSpinnerStyle">@style/SpinnerWishlist_Yellow</item>

        <item name="android:progressBarStyleHorizontal">@style/ProgressBarWishlist_Yellow</item>

        <item name="android:seekBarStyle">@style/SeekBarWishlist_Yellow</item>

        <item name="android:ratingBarStyle">@style/RatingBarWishlist_Yellow</item>

        <item name="android:ratingBarStyleIndicator">@style/RatingBarBigWishlist_Yellow</item>

        <item name="android:ratingBarStyleSmall">@style/RatingBarSmallWishlist_Yellow</item>

        <item name="android:buttonStyleToggle">@style/ToggleWishlist_Yellow</item>

        <item name="android:listChoiceBackgroundIndicator">@drawable/wishlist_yellow_list_selector_holo_light</item>

        <item name="android:activatedBackgroundIndicator">@drawable/wishlist_yellow_activated_background_holo_light</item>

        <item name="android:fastScrollThumbDrawable">@drawable/wishlist_yellow_fastscroll_thumb_holo</item>

        <!-- AlertDialog attributes -->
        <item name="android:alertDialogTheme">@style/Wishlist_AlertDialog</item>

    </style>


    <!--copy from "android:style/Theme.Holo.Light.Dialog.Alert-->
    <style name="Wishlist_AlertDialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowTitleStyle">@style/Wishlist_DialogWindowTitle</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowMinWidthMajor">@android:dimen/dialog_min_width_major</item>
        <item name="android:windowMinWidthMinor">@android:dimen/dialog_min_width_minor</item>
    </style>

    <style name="Wishlist_DialogWindowTitle">
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textAppearance">@style/Wishlist_TextAppearance_DialogWindowTitle</item>
    </style>

    <style name="Wishlist_TextAppearance_DialogWindowTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/wishlist_yellow_color</item>
    </style>


    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Wishlist.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Wishlist</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Wishlist</item>
    </style>

    <style name="DropDownListView.Wishlist" parent="@android:style/Widget.Holo.ListView.DropDown">
        <!--<item name="android:listSelector">@drawable/wishlist_yellow_item_background_holo_light</item>-->
        <item name="android:listSelector">@drawable/selectable_background_wishlist</item>
    </style>

    <style name="PopupMenu.Wishlist" parent="@android:style/Widget.Holo.ListPopupWindow">
        <!--<item name="android:popupBackground">@drawable/menu_dropdown_panel_wishlist</item> -->
    </style>

    <style name="AutoCompleteTextViewWishlist_Yellow" parent="android:Widget.Holo.Light.AutoCompleteTextView">
        <item name="android:dropDownSelector">@drawable/wishlist_yellow_list_selector_holo_light</item>
        <item name="android:background">@drawable/wishlist_yellow_edit_text_holo_light</item>
    </style>

    <style name="ButtonWishlist_Yellow" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/wishlist_yellow_btn_default_holo_light</item>
    </style>

    <style name="ImageButtonWishlist_Yellow" parent="android:Widget.Holo.Light.ImageButton">
        <item name="android:background">@drawable/wishlist_yellow_btn_default_holo_light</item>
    </style>

    <style name="SpinnerWishlist_Yellow" parent="android:Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/wishlist_yellow_spinner_background_holo_light</item>
        <item name="android:dropDownSelector">@drawable/wishlist_yellow_list_selector_holo_light</item>
    </style>

    <style name="TabWishlist_Yellow">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
        <item name="android:background">@drawable/wishlist_yellow_tab_indicator_holo</item>
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_weight">1</item>
        <item name="android:minWidth">80dip</item>
    </style>

    <style name="TabTextWishlist_Yellow">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <!-- v14 <item name="android:textAllCaps">true</item> -->
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">2</item>
        <item name="android:maxWidth">180dip</item>
    </style>

    <style name="ProgressBarWishlist_Yellow" parent="android:Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/wishlist_yellow_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/wishlist_yellow_progress_indeterminate_horizontal_holo_light</item>
    </style>

    <style name="SeekBarWishlist_Yellow" parent="android:Widget.Holo.Light.SeekBar">
        <item name="android:progressDrawable">@drawable/wishlist_yellow_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/wishlist_yellow_scrubber_progress_horizontal_holo_light</item>
        <item name="android:thumb">@drawable/wishlist_yellow_scrubber_control_selector_holo_light</item>
    </style>

    <style name="RatingBarWishlist_Yellow" parent="android:Widget.Holo.Light.RatingBar">
        <item name="android:progressDrawable">@drawable/wishlist_yellow_ratingbar_full_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/wishlist_yellow_ratingbar_full_holo_light</item>
    </style>

    <style name="RatingBarBigWishlist_Yellow" parent="android:Widget.Holo.Light.RatingBar.Indicator">
        <item name="android:progressDrawable">@drawable/wishlist_yellow_ratingbar_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/wishlist_yellow_ratingbar_holo_light</item>
    </style>

    <style name="RatingBarSmallWishlist_Yellow" parent="android:Widget.Holo.Light.RatingBar.Small">
        <item name="android:progressDrawable">@drawable/wishlist_yellow_ratingbar_small_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/wishlist_yellow_ratingbar_small_holo_light</item>
    </style>

    <style name="ToggleWishlist_Yellow" parent="android:Widget.Holo.Light.Button.Toggle">
        <item name="android:background">@drawable/wishlist_yellow_btn_toggle_holo_light</item>
    </style>













    <style name="Theme.D1"
        parent="android:style/android:Theme.Holo.Light.DarkActionBar">
        <!--<item name="android:actionBarStyle">@style/WishListActionBar</item> -->
        <!--<item name="android:windowContentOverlay">@null</item>-->
    </style>

    <style name="Theme.D1.noActionBar"
        parent="@android:style/Theme.Holo.Light.NoActionBar">
    </style>

    <style name="WishList.EditWish.Theme.ActionBar"
        parent="style/Wishlist_Yellow">
        <item name="android:actionMenuTextAppearance">@style/WishList.EditWish.ActionBar.MenuTextStyle</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="PreferenceListHeader" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>

    <style name="WishList_Yellow_PreferenceCategory" parent="style/_Wishlist_Yellow">
        <item name="android:listSeparatorTextViewStyle">@style/PreferenceListHeader</item>
    </style>

    <style name="WishList.EditWish.ActionBar.MenuTextStyle"
        parent="android:style/TextAppearance.Holo.Widget.ActionBar.Menu">
        <!--<item name="android:textColor">@color/red</item> -->
        <item name="android:textSize">18sp</item>
    </style>

    <style name="GridImageView">
        <item name="android:padding">3dp</item>
    </style>

    <style name="TitleBarAction" parent="android:style/Theme.Holo.Light">
        <item name="android:layout_width">@dimen/title_imageButtonHeight</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">?android:selectableItemBackground</item>
    </style>

    <style name="FooterBar" parent="android:style/Theme.Holo.Light">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/footBar_height</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/material_dark</item>
    </style>









    <style name="Theme.WishlistTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <!--
        <item name="android:windowEnterTransition">@transition/details_window_enter_transition</item>
        <item name="android:windowReturnTransition">@transition/details_window_return_transition</item>
        -->
        <!-- Set AppCompat’s actionBarStyle -->
        <!--<item name="actionBarStyle">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>-->

        <!-- Set AppCompat’s color theming attrs -->
        <item name="colorPrimary">@color/material_dark</item>
        <!--<item name="colorPrimaryDark">@color/material_blue_grey_800</item>-->
        <item name="colorAccent">@color/wishlist_yellow_color</item>

        <!--<item name="android:alertDialogTheme">@style/AppCompatAlertDialogStyle</item>-->

        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/wishlist_yellow_color</item>
        <item name="colorControlHighlight">@color/wishlist_yellow_color</item>
        <!---->
        <item name="windowActionModeOverlay">true</item>

        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <!-- this is needed as preference_category_material layout is using this color as the text color -->
    <color name="preference_fallback_accent_color">@color/wishlist_yellow_color</color>


    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!--app abar color in Activties Task manager -->
        <item name="colorPrimary">@color/material_dark</item>

        <!--copy/paste colors -->
        <item name="colorAccent">@color/wishlist_yellow_color</item>

        <!--status bar color -->
        <item name="colorPrimaryDark">@color/wishlist_yellow_color</item>
    </style>

    <style name="AppCompatAlertDialogStyleNoTitle" parent="AppCompatAlertDialogStyle">
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Wishlist.Dark.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionMenuTextAppearance">@style/Wishlist.actionMenuTextSize</item>
        <item name="actionModeBackground">@color/wishlist_yellow_color</item>
        <item name="actionBarPopupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>
    <!--<item name="actionMenuTextColor">@color/black</item>-->

    <style name="Wishlist.actionMenuTextSize" parent="Base.TextAppearance.AppCompat.Widget.ActionBar.Menu">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="TextBody">
        <item name="android:textSize">15sp</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textColor">@android:color/secondary_text_light</item>
    </style>

    <style name="ItemInfoText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:inputType">textNoSuggestions|textMultiLine</item>
    </style>

    <style name="WishStatsTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/medium_grey</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!--<item name="android:ellipsize">marquee</item>-->


    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NavigationView">
        <item name="menu">@menu/menu_navigation_drawer</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">start</item>
        <item name="itemIconTint">@drawable/drawer_item</item>
        <item name="itemTextColor">@drawable/drawer_item</item>
        <item name="itemBackground">@drawable/drawer_item_background</item>
    </style>

    <!-- login style -->

    <style name="ParseLoginUI" />

    <style name="ParseLoginUI.Button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/login_button_background_selector</item>
        <item name="android:textColor">@color/com_parse_ui_parse_login_display_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ParseLoginUI.Button.ThirdPartyLogin" parent="ParseLoginUI.Button">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="ParseLoginUI.HelpButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/com_parse_ui_parse_login_help_button_label_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ParseLoginUI.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="LoginUI.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/less_dark_grey</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>


</resources>
