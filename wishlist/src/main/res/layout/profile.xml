<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipe_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bodyBackground_light_grey">

        <ScrollView
            android:id="@+id/profile_scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/gradient_dark_background"
                    android:layout_height="260dp"
                    >

                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/drawer_header_layout"
                        android:layout_width="match_parent"
                        android:layout_height="210dp"
                        >

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_image"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/default_profile_image"
                            android:layout_centerInParent="true"
                            />

                        <ImageView
                            android:id="@+id/generated_profile_image"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/default_profile_image"
                            android:layout_centerInParent="true"
                            />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="20dp"
                        android:paddingLeft="10dp"
                        android:paddingTop="10dp"
                        android:paddingRight="10dp"
                        android:layout_gravity="bottom">

                        <TextView
                            android:id="@+id/wish_count"
                            style="@style/WishStatsTextView"
                            android:text="15\nWishes"
                            />

                        <TextView
                            android:id="@+id/completed_count"
                            style="@style/WishStatsTextView"
                            android:text="5\nCompleted"
                            />

                        <TextView
                            android:id="@+id/wish_value"
                            style="@style/WishStatsTextView"
                            android:text="256\n$Value"
                            />
                    </LinearLayout>
                </FrameLayout>

                <include
                    android:id="@+id/profile_username"
                    android:clickable="false"
                    layout="@layout/profile_item"
                    />

                <include
                    android:id="@+id/profile_name"
                    layout="@layout/profile_item"/>

                <include
                    android:id="@+id/profile_email"
                    layout="@layout/profile_item"/>

                <include
                    android:id="@+id/profile_change_password"
                    layout="@layout/profile_item"/>

            </LinearLayout>
        </ScrollView>

        <include
            layout="@layout/tool_bar"
            android:id="@+id/profile_toolbar"
            />
    </FrameLayout>
</android.support.v4.widget.SwipeRefreshLayout>