<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/wish_root_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/wish_list_card"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        card_view:cardCornerRadius="@dimen/radius"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="1dp"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:orientation="vertical">
                <!--		android:background="@xml/selector"  -->
                <!-- 		android:background="@color/notepad_paper"> -->

                <!-- 		<TextView android:id="@+id/txtName" android:layout_width="fill_parent" -->
                <!-- 			android:layout_height="fill_parent" android:padding="10dp" -->
                <!-- 			android:scrollbars="vertical" android:fadingEdge="vertical" -->
                <!-- 			android:layout_weight="1" -->
                <!-- 			android:textSize="10sp" -->
                <!-- 			android:textColor="@color/notepad_text"/> -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="3dp">

                    <ImageView
                        android:id="@+id/checkmark_complete"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="1dp"
                        android:layout_marginRight="5dp"
                        android:gravity="left|center_horizontal"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_checkmark"
                        />

                    <TextView
                        android:id="@+id/txtName"
                        android:text="Item name"
                        android:textSize="15sp"
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/dark_grey"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$99"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-light"
                    android:singleLine="true"
                    android:textColor="@color/medium_grey"/>
                <!--  		android:layout_weight="1"-->
                <!--  android:scrollbars="vertical" android:fadingEdge="vertical" -->
                <!--   			 			android:padding="12dp"  -->

                <TextView
                    android:id="@+id/txtStore" android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Item store"
                    android:textSize="13sp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/medium_grey"/>

                <TextView
                    android:id="@+id/txtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="Item address"
                    android:textSize="13sp"
                    android:textColor="@color/medium_grey"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/imgPhoto"
                android:layout_height="match_parent"
                android:layout_width="120dp"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
