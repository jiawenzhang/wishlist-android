<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:foreground="@drawable/wishlist_yellow_list_selector_holo_light">

    <!-- the FrameLayout is to have the press state of the item-->

<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:id="@+id/panel_content"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:paddingLeft="1dp"
android:paddingRight="1dp"
android:paddingTop="1dp"
android:paddingBottom="1dp"
android:background="@drawable/staggered_view_border"
android:descendantFocusability="blocksDescendants">
<!--1dp padding is to match with 1dp border so images won't obscure the border -->

    <com.etsy.android.grid.util.DynamicHeightImageView
        android:id="@+id/web_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

   <!-- <com.etsy.android.grid.util.DynamicHeightTextView
        android:id="@+id/staggered_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/medium_grey"/>
        -->

</LinearLayout>
</FrameLayout>
