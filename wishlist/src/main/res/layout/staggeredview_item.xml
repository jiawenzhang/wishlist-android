<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
android:id="@+id/panel_content"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:paddingLeft="1dp"
android:paddingRight="1dp"
android:paddingTop="1dp"
android:paddingBottom="5dp"
android:background="@drawable/staggered_view_border"
android:descendantFocusability="blocksDescendants">
<!--1dp padding is to match with 1dp border so images won't obscure the border -->

    <com.etsy.android.grid.util.DynamicHeightImageView
        android:id="@+id/staggered_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <com.etsy.android.grid.util.DynamicHeightTextView
        android:id="@+id/staggered_name"
        android:textSize="15sp"
        android:ellipsize="marquee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/dark_purple"/>

    <com.etsy.android.grid.util.DynamicHeightTextView
        android:id="@+id/staggered_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/bodyText_dark_grey"/>
<!--    android:gravity="center"/> -->
    <!--android:visibility="gone"/> -->

    <TextView android:id="@+id/staggered_id" android:visibility="invisible"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp" />

</LinearLayout>