<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/gradient_dark_background"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/drawer_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <FrameLayout
            android:id="@+id/profile_image_frame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="50dp"
            android:paddingBottom="20dp"
            >

            <ImageView
                android:id="@+id/generated_profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:src="@drawable/default_profile_image"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_gravity="center"
                android:src="@drawable/default_profile_image"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_image_frame"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:text="User name"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name"
            android:layout_marginBottom="30dp"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:paddingRight="10dp"
            android:layout_gravity="bottom">

            <TextView
                android:id="@+id/wish_count"
                style="@style/WishStatsTextView"
                android:text="15\nWishes"
                />

            <TextView
                android:id="@+id/completed_count"
                style="@style/WishStatsTextView"
                android:text="5\nCompleted"
                />

            <TextView
                android:id="@+id/wish_value"
                style="@style/WishStatsTextView"
                android:text="256\n$Value"
                />
        </LinearLayout>
    </RelativeLayout>


</FrameLayout>
