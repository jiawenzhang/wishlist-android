<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_weight="1"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical">

    <TextView android:id="@+id/newFeatureText"
        android:textSize="18sp"
        android:singleLine="false"
        android:ellipsize="end"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal|top"
        android:textColor="@color/white"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_gravity="top"
        />
    <!--android:background="@color/dark_purple"-->

    <ImageView android:id="@+id/newFeatureImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:adjustViewBounds="true"
        android:scaleType="centerInside"
        android:padding="1dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="30dp"
        />

    <TextView android:id="@+id/newFeatureTextBottom"
              android:textSize="12sp"
              android:singleLine="false"
              android:ellipsize="end"
              android:layout_width="match_parent"
              android:layout_height="30dp"
              android:gravity="center_horizontal|bottom"
              android:textColor="@color/medium_grey"
              android:paddingLeft="30dp"
              android:paddingRight="30dp"
              android:layout_gravity="top"
        />
    <Button android:id="@+id/newFeatureButton"
        android:background="@drawable/button_yellow_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:textColor="@color/wishlist_yellow_color"
        android:textSize="20sp"
        android:text="OK"
        android:visibility="gone"
        />

</LinearLayout>
